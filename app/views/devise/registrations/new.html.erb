<h2>Register</h2>

<div style="">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <b>What Do You Want to Register As?</b>
      <br><br>
    </div>

    <%= f.select(:type, options_for_select([['Receptionist', 'Receptionist'], ['Owner', 'Owner'], ['Veterinarian', 'Veterinarian'], ['Customer', 'Customer']], selected: :Receptionist )) %>

    <div id="codeOwner">
      <br>
      <b>Code to Register</b>
      <br><br>
      <%= f.text_field :code %>
    </div>

    <div>
      <br>
      <b>Personal Information</b>
      <br><br>
    </div>

    <div>
      <%= f.label :name, 'Name' %>
      <br>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :address, 'Address' %>
      <br>
      <%= f.text_field :address %>
    </div>

    <div>
      <%= f.label :city, 'City' %>
      <br>
      <%= f.text_field :city %>
    </div>

    <div>
      <%= f.label :state, 'State' %>
      <br>
      <%= f.text_field :state %>
    </div>

    <div>
      <%= f.label :zip, 'Zip Code' %>
      <br>
      <%= f.text_field :zip %>
    </div>

    <div class="doctor" style="display:none">
      <%= f.label :school, 'Veterinarian School' %>
      <br>
      <%= f.text_field :school %>
    </div>

    <div class="doctor" style="display:none">
      <%= f.label :years, 'Years in Practice' %>
      <br>
      <%= f.text_field :years %>
    </div>

    <div>
      <br>
      <b>Registration Information</b>
      <br><br>
    </div>

    <div>
      <%= f.label :email %>
      <br />
      <%= f.email_field :email, :autofocus => true %>
    </div>

    <div>
      <%= f.label :password %>
      <br />
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <br />
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit "Register" %>
    </div>
  <% end %>
</div>
